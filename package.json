{
  "name": "blueshell",
  "version": "0.0.0-development",
  "description": "A Behavior Tree implementation in modern Javascript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "lib",
    "LICENSE"
  ],
  "scripts": {
    "clean": "npm-run-all clean:js",
    "clean:js": "shx rm -rf dist",
    "compile": "npm-run-all compile:js",
    "compile:js": "tsc --pretty",
    "compile:watch": "tsc --pretty --watch",
    "pretest": "npm-run-all pretest:eslint",
    "pretest:eslint": "eslint .",
    "pretest:nsp": "nsp check",
    "test": "NODE_ENV=test nyc mocha ${MOCHA_OPTS}",
    "test:no-cover": "NODE_ENV=test mocha",
    "test:debug": "npm run test:no-cover -- --debug-brk test",
    "coverage": "NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "prepublish": "npm-run-all clean compile",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/6RiverSystems/blueshell.git"
  },
  "keywords": [
    "behavior-tree",
    "finite",
    "state",
    "machines",
    "redux",
    "immutable",
    "reactive"
  ],
  "author": "Joshua Chaitin-Pollak",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/6RiverSystems/blueshell/issues"
  },
  "homepage": "https://github.com/6RiverSystems/blueshell#readme",
  "devDependencies": {
    "@types/archy": "0.0.31",
    "@types/chai": "^4.0.4",
    "@types/lodash": "^4.14.110",
    "@types/mocha": "^2.2.43",
    "@types/node": "^9.4.6",
    "@types/reflect-metadata": "^0.1.0",
    "@types/uuid": "^3.4.3",
    "chai": "^4.1.2",
    "codecov": "^3.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.18.1",
    "eslint-config-6river": "^1.1.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-typescript": "^0.9.0",
    "husky": "^0.14.3",
    "jsdoc": "^3.5.5",
    "mocha": "^5.0.1",
    "mocha-junit-reporter": "^1.17.0",
    "npm-run-all": "^4.1.2",
    "nsp": "^3.2.1",
    "nyc": "^11.4.1",
    "shx": "^0.2.2",
    "sinon": "^4.4.2",
    "ts-node": "^5.0.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.7.2",
    "typescript-eslint-parser": "^14.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "archy": "^1.0.0",
    "source-map-support": "^0.5.3",
    "uuid": "^3.2.1"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "Follow <type>(<scope>): <subject> pattern, max 100 chars.",
      "autoFix": false
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
