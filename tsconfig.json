{
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "dist",
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowJs": false,
		"allowUnreachableCode": false,
		"sourceMap": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"target": "es2015"
	},
	"files": [
		"lib/index.ts"
	]
}
