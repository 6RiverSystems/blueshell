{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run mocha",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"env": {
				"NODE_ENV": "test",
				"LOG_PRETTY": "LOG_PRETTY",
				"BLUESHELL_DEBUG": "true"
			},
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"runtimeExecutable": "~/.nodenv/versions/8.9.4/bin/node",
			"args": [
				"--no-timeouts"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*"
			],
			"sourceMaps": true,
			"stopOnEntry": false,
			"outputCapture": "std",
			"skipFiles": [
				"<node_internals>/**/*.js"
			]
		}
	]
}